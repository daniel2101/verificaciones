<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    <!-- VISTA ARBOL -->
    <record id="verificaciones_view_tree" model="ir.ui.view">
        <field name="name">verificaciones.view.tree</field>
        <field name="model">verificaciones</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Verificaciones">
				<field name="no_cliente"/>
                <field name="name"/>
				<field name="visitador"/>
				<field name="fecha_solicitud" string="Solicitud"/>
				<field name="fecha_asignacion" string="Asignación"/>
				<field name="state"/>
            </tree>
        </field>
    </record>
	
    <!-- VISTA DE FORMULARIO -->
    <record id="verificaciones_view_form" model="ir.ui.view">
        <field name="name">verificaciones.view.form</field>
        <field name="model">verificaciones</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Verificación">
                <field name="name" colspan="4"/>
                <field name="descripcion" colspan="4"/>
            </form>
        </field>
    </record>
    
    <!-- VISTA DE BUSQUEDA -->
    <record id="inventario_equipo_view_search" model="ir.ui.view">
        <field name="name">inventario.equipo.view.search</field>
        <field name="model">inventario.equipo</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Equipo">
                <filter string="EN USO" icon="STOCK_EDIT" domain="[('state','=','uso')]"/>
                <filter string="DESCOMPUESTO" icon="STOCK_REDO" domain="[('state','=','descompuesto')]"/>
                <filter string="FUERA" icon="STOCK_UNDO" domain="[('state','=','fuera')]"/>
                <separator orientation="vertical"/>
                <newline/>
            </search>
        </field>
    </record>
    
    <!-- ACCIONES PARA LAS VISTAS -->
    <record id="action_inventario_tipo_equipo" model="ir.actions.act_window">
        <field name="name">Verificaciones</field>
        <field name="res_model">verificaciones</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="verificaciones_view_tree"/>
        <field name="search_view_id" ref="verificaciones_view_search"/>
    </record>
                   
    <!-- MENUS -->
    <menuitem name="Control de Equipo" id="menu_control_equipo" parent="menu_inventario"/>
    <menuitem action="action_inventario_equipo" id="menu_action_inventario_equipo" parent="menu_control_equipo"/>
    <menuitem action="action_inventario_tipo_equipo" id="menu_action_inventario_tipo_equipo" parent="menu_control_equipo"/>
    <menuitem action="action_inventario_marca_equipo" id="menu_action_inventario_marca_equipo" parent="menu_control_equipo"/>
    
    </data>
</openerp>
